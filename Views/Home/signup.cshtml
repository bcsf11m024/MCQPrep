    <script>
        $(document).ready(function () {

            $('#checking').hide();

            $('#chkbtn').click(function () {

                var username = $('#username').val();

                $('#checking').show();

                $.getJSON("/Home/CheckUserName?username=" + username, function (data) {
                    $('#checking').hide();
                    if (data) {
                        //$(this).css('color', 'red');
                        $('#result').text("User already exists in database").css('color', 'red');

                    }
                    else {
                        //$(this).css('color', 'green');
                        $('#result').text("User Name is available").css('color', 'green');
                    }
                });

            });
        });

    </script>

