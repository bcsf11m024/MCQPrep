        <div class="container">    
        <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
            <div class="panel panel-info" >
                    <div class="panel-heading">
                        <div class="panel-title">Sign Up</div>
                       
                    </div>     

                    <div style="padding-top:30px" class="panel-body" >

                        
                        <form action="/Home/signupconfirm" method="post">
                        <div class="form-group">
                                    <label for="email" class="col-md-3 control-label">Email</label>
                                    <div style="margin-bottom: 10px" class="col-md-9">
                                        <input id="email" type="text" class="form-control" name="email" placeholder="Email Address"/>
                                    </div>
                                </div>
                                    
                                <div class="form-group">
                                    <label for="fullname" class="col-md-3 control-label">Full Name</label>

                                    <div style="margin-bottom: 10px" class="col-md-9">
                                        <input id="fullname" type="text" class="form-control" name="fullname" placeholder="Full Name"/>
                                    </div>
                                </div>


                                <div class="form-group">
                                    <label for="username" class="col-md-3 control-label">User Name</label>
                                    <div style="margin-bottom: 10px" class="col-md-9">
                                        <input id="username" type="text" class="form-control" name="username" placeholder="Username"/>
                                        <input type="button" value="Check Availability" id="chkbtn"/>
                               <div id="result"></div>

                                    </div>
                                        @Scripts.Render("~/bundles/jquery")

                                   

                                </div>


                                <div class="form-group">
                                    <label for="password" class="col-md-3 control-label">Password</label>
                                    <div style="margin-bottom: 10px" class="col-md-9">
                                        <input type="password" class="form-control" name="passwd" placeholder="Password"/>
                                    </div>
                                </div>


                                <div class="form-group">
                                    <label for="reenterpassword" class="col-md-3 control-label">Confirm Password:</label>
                                    <div style="margin-bottom: 15px" class="col-md-9">
                                        <input type="password" class="form-control" name="passwdagain" placeholder="Re-enter Password"/>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="dateofbirth" class="col-md-3 control-label">Date of Birth: </label>
                                    <div style="margin-bottom: 10px" class="col-lg-2">
                                        <input type="text" class="form-control" name="day" maxlength="2" placeholder="DD"/> 
                                   </div>
                                        
                                     <div style="margin-bottom: 10px" class="col-lg-2">
                                        <input type="text" class="form-control" name="month" maxlength="2" placeholder="MM"/> 
                                   </div>

                                     <div style="margin-bottom: 10px" class="col-lg-3">
                                        <input type="text" class="form-control" name="year" maxlength="4" placeholder="YYYY"/> 
                                   </div>
                                       
                               </div>


                                <div class="form-group">
                                    <label for="city" class="col-md-3 control-label">City: </label>
                                    <div style="margin-bottom: 15px" class="col-md-9">
                                        <input type="text" class="form-control" name="city" placeholder="City"/>
                                    </div>
                                </div>


                            <div class="form-group">
                                    <label for="country" class="col-md-3 control-label">Country: </label>
                                    <div style="margin-bottom: 15px" class="col-md-9">
                                        <input type="text" class="form-control" name="country" placeholder="Country"/>
                                    </div>
                            </div>


                            <div class="form-group">
                                    <label for="mobilenumber" class="col-md-3 control-label">Mobile Phone: </label>
                                    <div style="margin-bottom: 15px" class="col-md-9">
                                        <input type="text" class="form-control" maxlength="11" name="mobilenumber" placeholder="03XXxxxxxxx"/>
                                    </div>
                            </div>
                                
                                    

                           <div class="form-group">
                                    <label for="gender" class="col-md-3 control-label">Gender: </label>
                                        
                                            <div class="col-md-9" class="radio">
                                              <label><input type="radio" name="optradio"/> Male</label>
                                            </div>
                               <div class="col-md-3 control-label"></div>
                                            <div style="margin-bottom: 10px" class="col-md-9" class="radio">
                                              <label><input type="radio" name="optradio"/> Female</label>
                                            </div>
                               </div>



                        <div class="form-group">
                            <label for="securityquestion" class="col-md-3 control-label">Security Question: </label>
                            <div class="col-md-9 control-label">
                            <select name="securityquestion" style="margin-bottom: 15px" class="form-control">
                                <option value="first-teacher"> What is the name of your first teacher? </option>
                                <option value="mother-birthplace"> What is your mother's birth place? </option>
                                <option value="vehicle-liscense"> What is the number of your vehicle liscence? </option>
                                <option value="favourite-uncle"> What is the name of your favourite uncle? </option>
                                <option value="favourite-novel"> Which is your favourite novel? </option>

                            </select>

                                </div>

                         </div>


                        <div class="form-group">
                                    <label for="securityanswer" class="col-md-3 control-label">Your Answer: </label>
                                    <div style="margin-bottom: 15px" class="col-md-9">
                                        <input type="text" class="form-control" name="securityanswer" placeholder="Security Question Answer"/>
                                    </div>
                            </div>


                          <div class="form-group">
                                    
                                    <div class="col-md-3 control-label">
                                        <input class="col-md-9" type="checkbox"  name="termsandconditions"/>
                                    </div>
                              
                                     <div style="margin-bottom: 10px" class="col-lg-9">
                                        <label> I have read all <a href="terms-and-conditions.html"> terms and conditions </a></label>
                                   </div>
                            </div>

                       
                                                

                      <div class="form-group">
                           <!-- Button -->                                        
                              <div  style="margin-bottom: 15px ; float:right" class="col-md-3 control-label">
                                     @*<button id="btn-signup" type="button" class="btn btn-info">  &nbsp Sign Up</button>*@
                                  <input type="submit" value="Signup" />
                              </div>
                      </div>

                            </form>

                                 
                                                
                    </div>  
        </div>
                         </div>
            </div>
    


